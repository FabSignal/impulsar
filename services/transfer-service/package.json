{
  "name": "@impulsar/transfer-service",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src",
    "docker:build": "docker build -t impulsar-transfer-service .",
    "docker:run": "docker run -p 3001:3001 --env-file .env impulsar-transfer-service"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "@impulsar/stellar-sdk": "*",
    "@impulsar/supabase-client": "*",
    "@impulsar/database": "*",
    "@impulsar/contracts": "*",
    "@impulsar/dtos": "*",
    "@impulsar/core": "*",
    "@impulsar/config": "*"
  },
  "devDependencies": {
    "typescript": "^5.6.3",
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/node": "^20.11.5",
    "tsx": "^4.7.0",
    "eslint": "^9.17.0"
  }
}